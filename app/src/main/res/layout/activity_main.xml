<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end|bottom"
        android:padding="30dp"
        android:textSize="60sp"
        android:text="0" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <Button android:id="@+id/button_clear" android:text="C" android:layout_columnWeight="1" />
        <Button android:id="@+id/button_divide" android:text="/" android:layout_columnWeight="1" />
        <Button android:id="@+id/button_multiply" android:text="*" android:layout_columnWeight="1" />
        <Button android:id="@+id/button_backspace" android:text="âŒ«" android:layout_columnWeight="1" />

        <Button android:id="@+id/button_7" android:text="7" android:layout_columnWeight="1" />
        <Button android:id="@+id/button_8" android:text="8" android:layout_columnWeight="1" />
        <Button android:id="@+id/button_9" android:text="9" android:layout_columnWeight="1" />
        <Button android:id="@+id/button_subtract" android:text="-" android:layout_columnWeight="1" />

        <Button android:id="@+id/button_4" android:text="4" android:layout_columnWeight="1" />
        <Button android:id="@+id/button_5" android:text="5" android:layout_columnWeight="1" />
        <Button android:id="@+id/button_6" android:text="6" android:layout_columnWeight="1" />
        <Button android:id="@+id/button_add" android:text="+" android:layout_columnWeight="1" />

        <Button android:id="@+id/button_1" android:text="1" android:layout_columnWeight="1" />
        <Button android:id="@+id/button_2" android:text="2" android:layout_columnWeight="1" />
        <Button android:id="@+id/button_3" android:text="3" android:layout_columnWeight="1" />
        <Button android:id="@+id/button_equals" android:text="=" android:layout_gravity="fill" android:layout_rowSpan="2" android:layout_columnWeight="1" />

        <Button android:id="@+id/button_0" android:text="0" android:layout_columnSpan="2" android:layout_gravity="fill" android:layout_columnWeight="1" />
        <Button android:id="@+id/button_dot" android:text="." android:layout_columnWeight="1" />

    </GridLayout>

</LinearLayout>
